    let int32 = sized_int(32);

    let factorial = instance algorithm(int32)
    {
        function calculate(arg)
        {
            if (arg == 1)
            {
                // TODO: allow this conversion from int to int32 to work in the return context
                // return 1;
                return arg;
            }

            return arg * calculate(arg - 1);
        }
    };

