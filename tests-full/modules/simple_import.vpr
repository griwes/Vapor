import ackermann;

module main
{
    let int32 = sized_int(32);

    let entry = Î»(arg : int32) -> int32
    {
        let constant_foldable = ackermann.ackermann(ackermann.mn{ 2, 3 });
        let non_constant_foldable = ackermann.ackermann(ackermann.mn{ arg, arg + 1 });

        return constant_foldable - non_constant_foldable;
    };
}

